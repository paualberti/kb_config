    key <AB10> {	[     slash,	question	]	};

    key <BKSL> {	[ backslash,         bar	]	};
    key <RALT> {	[ BackSpace,	BackSpace	]	};
};

# Add to /etc/default/keyboard
XKBLAYOUT="us"
XKBVARIANT="basic,colemak_vim,nrstmak"
XKBOPTIONS="caps:escape"
XKBMODEL="pc105"
BACKSPACE="guess"

# To set it execute
setxkbmap -layout us -variant <variant>
